	static Integer[] getLottoNumbers() {
		//creates an array of 49 different numbers
		Integer [] array = new Integer[49];
		for (int i=0; i<array.length; i++) {
			array[i] = i + 1;
		}
		System.out.println(Arrays.toString(array));
		
		//shuffle the numbers within an array
		Collections.shuffle(Arrays.asList(array));
		System.out.println(Arrays.toString(array));
		
		int[]  lottoNumbers = new int [6];
			for(int i = 0; i<lottoNumbers.length; i++) {
				lottoNumbers[i] = array[i];
			}
		System.out.println("Lotto numbers: " + Arrays.toString(lottoNumbers));
		//return lottoNumbers;
		return array;
		
	}
